<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="pCloudPhotoOrganizer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:pCloudPhotoOrganizer.Views">

  <!-- Page principale : Galerie -->
  <ShellContent
        Title="Galerie"
        Route="gallery"
        ContentTemplate="{DataTemplate views:GalleryPage}" />

  <!-- Page de paramètres : choix des dossiers -->
  <ShellContent
        Title="Paramètres"
        Route="settings"
        ContentTemplate="{DataTemplate views:SettingsPage}" />

  <ShellContent
        Title="À propos"
        Route="about"
        ContentTemplate="{DataTemplate views:AboutPage}" />

</Shell>
