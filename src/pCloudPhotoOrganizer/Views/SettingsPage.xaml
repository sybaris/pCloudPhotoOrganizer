<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="pCloudPhotoOrganizer.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    xmlns:services="clr-namespace:pCloudPhotoOrganizer.Services"
    Title="Paramètres">

  <ScrollView>
    <ScrollView.Content>
      <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Dossiers utilisés pour rechercher les photos"
               FontAttributes="Bold"
               FontSize="Medium" />

        <!-- Liste des dossiers -->
        <CollectionView x:Name="FoldersList"
                        HeightRequest="150"
                        SelectionMode="Single">
          <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="sys:String">
              <HorizontalStackLayout Spacing="10" Padding="5">
                <Label Text="{Binding .}" VerticalOptions="Center" />
              </HorizontalStackLayout>
            </DataTemplate>
          </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Saisie manuelle (pour l'instant) -->
        <Entry x:Name="FolderEntry"
               Placeholder="Chemin du dossier (temporaire)" />

        <HorizontalStackLayout Spacing="10">
          <Button Text="Ajouter"
                  Clicked="OnAddFolderClicked" />
          <Button Text="Supprimer sélection"
                  Clicked="OnRemoveFolderClicked" />
        </HorizontalStackLayout>

        <BoxView HeightRequest="1" Color="#DDDDDD" />

        <Label Text="Mode d'export"
               FontAttributes="Bold"
               FontSize="Medium" />

        <HorizontalStackLayout Spacing="20">
          <RadioButton x:Name="ExportModePCloudRadio"
                       Content="pCloud"
                       IsChecked="True"
                       CheckedChanged="OnExportModeChanged" />
          <RadioButton x:Name="ExportModeLocalRadio"
                       Content="Local"
                       CheckedChanged="OnExportModeChanged" />
        </HorizontalStackLayout>

        <Border x:Name="PCloudGroupBox"
                Stroke="#DDDDDD"
                StrokeThickness="1"
                BackgroundColor="#FAFAFA"
                Padding="15">
          <VerticalStackLayout Spacing="10">
            <Label Text="pCloud"
                   FontAttributes="Bold"
                   FontSize="Medium" />

            <Entry x:Name="PCloudUserEntry"
                   Placeholder="Email ou nom d'utilisateur pCloud" />

            <Border Stroke="#DDDDDD"
                    BackgroundColor="#F8F8F8"
                    StrokeThickness="1"
                    Padding="0">
              <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
              </Border.StrokeShape>
              <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                <Entry x:Name="PCloudPasswordEntry"
                       Grid.Column="0"
                       Placeholder="Mot de passe pCloud"
                       IsPassword="True"
                       Margin="12,10,0,10"
                       BackgroundColor="Transparent" />
                <ImageButton x:Name="PasswordVisibilityButton"
                             Grid.Column="1"
                             Source="icon_eye_closed.svg"
                             Clicked="OnTogglePasswordVisibilityClicked"
                             BackgroundColor="Transparent"
                             Padding="10"
                             HorizontalOptions="End"
                             VerticalOptions="Center"
                             SemanticProperties.Hint="Afficher ou masquer le mot de passe" />
              </Grid>
            </Border>

            <Entry x:Name="PCloudRootEntry"
                   Placeholder="Dossier racine pCloud pour les albums (ex: /Photos)" />
          </VerticalStackLayout>
        </Border>

        <Border x:Name="LocalGroupBox"
                Stroke="#DDDDDD"
                StrokeThickness="1"
                BackgroundColor="#FAFAFA"
                Padding="15">
          <VerticalStackLayout Spacing="10">
            <Label Text="Chemin local d'export"
                   FontAttributes="Bold"
                   FontSize="Medium" />

            <Entry x:Name="LocalPathEntry"
                   Placeholder="Dossier local pour l'export"
                   IsEnabled="False" />
          </VerticalStackLayout>
        </Border>

        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
          <Switch
              x:Name="DefaultMoveSwitch"
              IsToggled="True" />
          <Label
              Text="Déplacer les photos par défaut"
              VerticalOptions="Center" />
        </HorizontalStackLayout>

        <Label x:Name="PCloudErrorLabel"
               TextColor="Red"
               FontSize="Small"
               IsVisible="False" />

        <Button Text="Sauvegarder"
                Clicked="OnSaveAllClicked"
                BackgroundColor="DodgerBlue"
                TextColor="White" />

      </VerticalStackLayout>
    </ScrollView.Content>
  </ScrollView>

</ContentPage>
