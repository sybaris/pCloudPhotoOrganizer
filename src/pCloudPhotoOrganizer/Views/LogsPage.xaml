<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="pCloudPhotoOrganizer.Views.LogsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Logs">
  <Grid Padding="20"
        RowSpacing="15"
        RowDefinitions="Auto,Auto,Auto,*">
    <Label Grid.Row="0"
           Text="Journal d'activité"
           FontAttributes="Bold"
           FontSize="Medium" />

    <HorizontalStackLayout Grid.Row="1"
                           Spacing="10">
      <Button Text="Rafraîchir"
              Clicked="OnRefreshLogsClicked"
              CornerRadius="8" />
      <Button Text="Effacer les logs du jour"
              Clicked="OnClearLogsClicked"
              CornerRadius="8"
              BackgroundColor="#EEEEEE"
              TextColor="#333333" />
    </HorizontalStackLayout>

    <Label Grid.Row="2"
           x:Name="LogsStatusLabel"
           FontSize="Small"
           TextColor="Gray"
           Text="Chargement..." />

    <Border Grid.Row="3"
            Stroke="#DDDDDD"
            BackgroundColor="#F9F9F9"
            StrokeThickness="1"
            HeightRequest="280"
            Padding="0">
      <Border.StrokeShape>
        <RoundRectangle CornerRadius="12" />
      </Border.StrokeShape>
      <Editor x:Name="LogsEditor"
              IsReadOnly="True"
              AutoSize="TextChanges"
              FontFamily="Courier New"
              TextColor="#222222"
              BackgroundColor="Transparent"
              VerticalOptions="Fill"
              HorizontalOptions="Fill"
              Text="" />
    </Border>
  </Grid>
</ContentPage>
