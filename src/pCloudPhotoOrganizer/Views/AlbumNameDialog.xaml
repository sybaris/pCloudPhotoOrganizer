<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="pCloudPhotoOrganizer.Views.AlbumNameDialog"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Nouvel album pCloud">

  <VerticalStackLayout Padding="20,40" Spacing="15">

    <Label
        Text="Album name"
        FontAttributes="Bold"
        FontSize="Medium" />

    <Entry
        x:Name="AlbumNameEntry"
        Keyboard="Text"
        ReturnType="Done"
        Completed="OnAlbumNameCompleted"
        ClearButtonVisibility="WhileEditing"
        Loaded="OnAlbumNameEntryLoaded" />

    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
      <CheckBox
          x:Name="MoveCheckBox"
          IsChecked="True" />
      <Label
          Text="DÃ©placer les photos au lieu de copier"
          VerticalOptions="Center">
        <Label.GestureRecognizers>
          <TapGestureRecognizer Tapped="OnMoveOptionTapped" />
        </Label.GestureRecognizers>
      </Label>
    </HorizontalStackLayout>

    <Label
        x:Name="ErrorLabel"
        TextColor="Red"
        FontSize="Small"
        IsVisible="False" />

    <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
      <Button
          Text="Annuler"
          Clicked="OnCancelClicked" />
      <Button
          Text="OK"
          Clicked="OnOkClicked" />
    </HorizontalStackLayout>

  </VerticalStackLayout>
</ContentPage>
